{
  "name": "@hcl-cdp-ta/geofence-sdk",
  "version": "3.0.0",
  "description": "Geofencing SDK for web-based geolocation tracking",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch"
  },
  "keywords": [
    "geofence",
    "geolocation",
    "location",
    "tracking"
  ],
  "author": "Simon Pallister",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HCL-CDP-TA/geofence.git",
    "directory": "packages/sdk"
  },
  "devDependencies": {
    "@types/node": "^20",
    "tsup": "^8",
    "typescript": "^5"
  }
}
